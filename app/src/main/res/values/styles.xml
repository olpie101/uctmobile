<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Actionbar_theme">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarDivider">@null</item>
    </style>

    <style name="cardviewStyleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="jammieListItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="jammieListItemStyleBold" parent="jammieListItemStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>    <item name="android:paddingRight">0dp</item>
    </style>

</resources>
