<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Here we setting appcompatâ€™s actionBarStyle -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="primaryBackground">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="primaryBackgroundStandardPaddingLR" parent="primaryBackground">
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
    </style>

    <style name="cardviewStyleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="baseTextCenterVertical">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/standard_padding</item>
        <item name="android:paddingRight">@dimen/standard_padding</item>
    </style>
    
    <style name="jammieListItemStyle" parent="baseTextCenterVertical">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="jammieListItemStyleBold" parent="jammieListItemStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="jammieListHeaderStyle" parent="baseTextCenterVertical">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="jammieListBreadcrumbStyle" parent="baseTextCenterVertical">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="invisibleText" parent="jammieListItemStyleBold">
        <item name="android:textColor">#00FFFFFF</item>
    </style>



    <style name="myActionBarStyle">
        <item name="android:background">@color/primary</item>
        <item name="android:color">@color/hsc</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
    </style>

    <style name="popupOverflow" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/primary_dark</item>
    </style>

</resources>
