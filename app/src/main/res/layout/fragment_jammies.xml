<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="3"
    android:id="@+id/jammie_container">

    <ImageView
        android:id="@+id/iv_jammie_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:contentDescription="@string/jammie_map_description"
        android:src="@drawable/ic_launcher"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_jammie_all_routes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        tools:context=".MainActivity"/>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_jammie_routes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        tools:context=".MainActivity"/>

