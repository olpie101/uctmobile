<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="jammieListItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/standard_padding</item>
        <item name="android:paddingEnd">@dimen/standard_padding</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="jammieListItemStyleBold" parent="jammieListItemStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>